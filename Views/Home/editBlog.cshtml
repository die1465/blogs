@model efcoreModels.blogs

<form asp-controller="Home" asp-action="editBlog" method="post">
    <label for="title">title:</label>
    <input type="text" name="title" value="@Model.title" required>
    <br>
    <textarea name="blog" cols="30" rows="10" required>@Model.blog</textarea>
    <br>  
    <input type="hidden" name="blogID" value="@Model.blogId">  
    <input type="submit" value="add blog">
</form>